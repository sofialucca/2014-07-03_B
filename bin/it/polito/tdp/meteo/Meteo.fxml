<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.meteo.MeteoController">
  <!-- TODO Add Nodes -->
  <center>
    <VBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
      <children>
        <HBox alignment="CENTER_LEFT" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0">
          <children>
            <Label text="Mese" />
            <ChoiceBox fx:id="boxMese">

            </ChoiceBox>
            <Button id="btnCerca" fx:id="btnUmidita" mnemonicParsing="false" text="Umidità" />
